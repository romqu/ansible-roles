{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "docker": {
        "fileMatch": [
            "^compose\\.ya?ml(?:\\.j2)?$"
        ]
    },
    "packageRules": [
        {
            "matchDatasources": [
                "pypi"
            ],
            "matchManagers": [
                "pip_requirements"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "major"
            ],
            "groupName": "Python dependencies",
            "enabled": true
        }
    ]
}