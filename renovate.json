{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended",
        ":disableRateLimiting",
        "docker:enableMajor",
        "github>romqu/ansible-roles//renovate/meta.json"
    ],
    "hostRules": [
        {
            "hostType": "docker",
            "matchHost": "ghcr.io",
            "username": "romqu",
            "password": "{{ secrets.GITHUB_PASSWORD }}"
        }
    ],
    "packageRules": [
        {
            "matchDatasources": [
                "pypi"
            ],
            "matchManagers": [
                "pip_requirements"
            ],
            "matchUpdateTypes": [
                "minor",
                "patch",
                "major"
            ],
            "groupName": "Python dependencies",
            "enabled": true
        },
        {
            "matchPackagePatterns": [
                "redis"
            ],
            "matchManagers": [
                "docker-compose"
            ],
            "enabled": false
        }
    ],
    "regexManagers": [
        {
            "fileMatch": "(^|/)(?:docker-)?compose[^/]*\\.ya?ml\\.j2$",
            "matchStrings": [
                "(?:image: )(?<depName>.*?)(?::(?<currentValue>.*?))?(?:@(?<currentDigest>sha256:[a-f0-9]+))?\\n"
            ],
            "datasourceTemplate": "docker",
            "versioningTemplate": "docker"
        }
    ]
}